# define
#==============================================================================
$('.tooltipEle').tooltip()
$(".draggable").draggable({connectToSortable: false})
$(".slider").slider(
  range: "max"
  slide: (e, ui) ->
    $(this).next().val(ui.value)
)

#==============================================================================
# event
#==============================================================================
$(".box_accordion .trigger").click ->
  $(this).next().slideToggle()