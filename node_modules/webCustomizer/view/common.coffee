exports.makeHeader = (id, iconName, description, domList) ->
  dom = [
    ["div", {id:id + "Changer" , class:"webCustomizer box_accordion draggable"}]
    [
      ["div", {class: "trigger fixed"}]
      [
        ["i", {class: "tooltipEle fa fa-2x fa-" + iconName, data:["toggle", 'tooltip'], data2:["placement", "right"], title:description }]
      ]
      ["div", {class: "contents"}]
      [
        domList
      ]
    ]
  ]
  dom

exports.makeSliderWithInput = (setterName, id, lavel) ->
  slider = html.gui.makeSliderWithInput(setterName, id)
  [
    ["tr"]
    [
      ["td", {}, lavel]
      ["td"]
      [
        slider.slider
      ]
      ["td"]
      [
        slider.input
      ]
    ]
  ]

exports.makeSliderWithInputAndSelect = (setterName, id, selectId, list, lavel) ->
  slider = html.gui.makeSliderWithInput(setterName, id)
  [
    ["tr"]
    [
      ["td", {}, lavel]
      ["td"]
      [
        slider.slider
      ]
      ["td"]
      [
        slider.input
      ]
      ["td"]
      html.gui.makeSelectBox(selectId, list)
    ]
  ]
  
  
exports.makeSelectBox = (id, list, lavel) ->
  [
    ["tr"]
    [
      ["td", {}, lavel]
      ["td"]
      html.gui.makeSelectBox(id, list)
    ]
  ]

exports.makeColorSelectBox = (id, nameList, lavel) ->
  ["tr"]
  [
    ["td", {}, lavel]
    ["td"]
    html.gui.makeSelectBox(id + "BaseColor", nameList.base)
    html.gui.makeSelectBox(id + "SideColor", nameList.side)
  ]


exports.makeSectionText = (lavel) ->
  [
    ["tr"]
    [
      ["td", {class: "sectionText"}, lavel]
    ]
  ]

exports.makeSetterHeader = (name, array) ->
  [
    ["div", {class: "setter " + name + "Setter"}, name]
    [
      ["table"]
      array
    ]
  ]
