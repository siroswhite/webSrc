data = require('../data')
html = require('html')
common_view = require('./common')

#==============================================================================
# data
#==============================================================================
makeSetterArea = () ->
  makeTransSetter = () ->
    dom = []
    for key in data.option.trans.param
      if key == "method"
        dom.push.apply(dom, common_view.makeSelectBox(key + "_trans_select", data.option.trans.method, key))
      else
        dom.push.apply(dom, common_view.makeSliderWithInput("trans", key + "_trans", key))
    dom
      
  dom
  dom = []
  dom.push.apply(dom, common_view.makeSetterHeader("trans", makeTransSetter()))
  dom
    
dom = common_view.makeHeader("option", "gear", "option",
  [
    ["div", {class: "headerArea"}]
    ["div", {class: "contentsArea"}]
    makeSetterArea()
  ]
)

#console.log(html.core.make(dom))
$("#webCustomizerArea").append(html.core.make(dom))