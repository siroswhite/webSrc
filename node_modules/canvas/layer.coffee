class Canvas_Layer extends Canvas_Core
  width: 1920
  height: 1920 * 9 / 16
  
  #----------------------------------------------------------------------------
  # constructor
  #----------------------------------------------------------------------------
  constructor:(layerName, index) ->
    $("<canvas id=\'" + layerName + "\'></canvas>").appendTo("#viewport")
    $("#" + layerName).css("z-index", index)
    super(layerName)
    
    this.canvas.width = this.width
    this.canvas.height = this.height