//=============================================================================
// main
//=============================================================================
$gridNum: 12
$gridNum: (100/12)
$gridMargin: 15
$gridSizeTag: xs, sm, md, lg

.container
  margin-right: auto
  margin-left: auto

//-----------------------------------------------------------------------------
// row
//-----------------------------------------------------------------------------
// row
.row
  width: 100%
  display: table
  margin-right: auto
  margin-left: auto
//.row:before
//  clear: both

//-----------------------------------------------------------------------------
// col
//-----------------------------------------------------------------------------
@mixin col($num)
  position: relative
  display: table-cell
  width: percentage($gridNum * $num / 100)
  padding-left: $gridMargin + px
  padding-right: $gridMargin + px

@for $sizeCnt from 1 through length($displaySizeList)
  @media (min-width: nth($displaySizeList, $sizeCnt) + "px")
    @for $cnt from 1 through 12
      .col-#{nth($gridSizeTag, $sizeCnt)}-#{$cnt}
        @include col($cnt)
