#------------------------------------------------------------------------------
# fade
#------------------------------------------------------------------------------
exports.fadein = (target, time) ->
  $(target).animate( { opacity: "show"}, { duration: time, easing: 'linear'} )

exports.fadeout = (target, time) ->
  $(target).animate( { opacity: "hide"}, { duration: time, easing: 'linear'} )

#------------------------------------------------------------------------------
# blind
#------------------------------------------------------------------------------
exports.blind = (target, time, dir) ->
  $(target).toggle("blind", {"direction": dir}, time)

#------------------------------------------------------------------------------
# clip
#------------------------------------------------------------------------------
exports.clip = (target, time, dir) ->
  $(target).toggle("clip", {"direction": dir}, time)

#------------------------------------------------------------------------------
# drop
#------------------------------------------------------------------------------
exports.drop = (target, time, dir) ->
  $(target).toggle("drop", {"direction": dir}, time)

#------------------------------------------------------------------------------
# slide
#------------------------------------------------------------------------------
exports.slide = (target, time, dir, distance) ->
  $(target).toggle("slide", {"direction": dir, "distance": distance}, time)

#------------------------------------------------------------------------------
# expolode
#------------------------------------------------------------------------------
exports.explode = (target, time, pieces) ->
  $(target).toggle("explode", {"pieces": pieces}, time)

#------------------------------------------------------------------------------
# fold
#------------------------------------------------------------------------------
exports.fold = (target, time, horizFirst,  size) ->
  $(target).toggle("fold", {"horizFirst": horizFirst, "size": size}, time)

#------------------------------------------------------------------------------
# puff
#------------------------------------------------------------------------------
exports.puff = (target, time, per) ->
  $(target).toggle("puff", {"percent": per}, time)

#------------------------------------------------------------------------------
# scale
#------------------------------------------------------------------------------
exports.scale = (target, time, dir, origin, per, scale) ->
  $(target).toggle("scale", {"direction": dir, "origin": origin, "percent": per, "scale": scale}, time)
